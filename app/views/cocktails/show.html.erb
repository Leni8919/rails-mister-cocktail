<div class="container">

  <div>
    <h1>Cocktail details</h1>
    <h2><%= @cocktail.name %></h2>
    <h3>Instructions</h3>
    <p>blabla</p>
    <h3>Ingredients list</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
      <li> <%= dose.ingredient.name  %> - <%= dose.description %> <%= link_to 'Delete', dose_path(dose),
          method: 'delete',
          data: { confirm: "Are you sure?" } %>
      </li>
      <% end %>
    </ul>
  </div>

  <div>
    <%= link_to 'Add an ingredient', new_cocktail_dose_path(@cocktail) %>
  </div>

  <div>
    <%= link_to 'Back to cocktails list', cocktails_path %>
  </div>

</div>
